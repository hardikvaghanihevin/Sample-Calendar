<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ShapeAppearanceOverlay.ShapeAbleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Adjust the corner radius as per your requirement -->
    </style>

    <style name="TextViewStyle.medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/post_nord_sans_medium</item>
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTextStyle.regular" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_46sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/searchView_EventTextSize</item>
        <item name="android:fontFamily">@font/post_nord_sans_regular</item>
        <item name="android:editTextColor" tools:ignore="NewApi">@color/accent_primary</item>
        <item name="backgroundColor">@color/background_secondary</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_search_cursor_drawable</item>
    </style>



</resources>